<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.maafooD.myProfile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:src="@drawable/backbutton"
            android:onClick="back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="MAA FOOD"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <ImageView

        android:id="@+id/profileImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:src="@drawable/addprofile"/>

    <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name : Muhammad Imran"
        android:padding="10dp"
        android:gravity="center"
        android:layout_margin="10dp"
        style="@style/TextAppearance.AppCompat"/>
    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email : imaran78098@gmail.com"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        style="@style/TextAppearance.AppCompat"/>
    <TextView
        android:id="@+id/profileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phone : 03312276305"
        android:padding="10dp"
        android:layout_margin="10dp"
        style="@style/TextAppearance.AppCompat"/>

    <Button
        android:id="@+id/profileUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        style="@style/TextAppearance.AppCompat"
        android:padding="10dp"/>
</LinearLayout>
